<%= form_with(model: @picture, local: true ,url: choose_new_or_edit ) do |form| %>
    <% if @picture.errors.any? %>
      <div id="error_explanation">
        <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
        <ul>
  
        <% @picture.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="picture_content">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
    
    <div class="picture_image">
    <%= form.label :image %>
    <%= image_tag @picture.image.url if @picture.image.present? %>
    <%= form.file_field :image %>
  </div>
    <%= form.submit %>
  <% end %>
  
  <%= link_to "投稿一覧画面にもどる", pictures_path %>